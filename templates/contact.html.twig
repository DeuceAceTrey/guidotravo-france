{% extends "base.html.twig" %}

{% block title %}Contactez GuidoTravo pour vos Questions de Conformité dans le Bâtiment{% endblock %}
{% block description %}
    <meta name="description" content="Contactez l'équipe de GuidoTravo pour toute question sur le contrôle de conformité dans le bâtiment. Nous sommes là pour vous aider à naviguer les normes de construction et à garantir la qualité de vos projets." />
{% endblock %}

{% block keywords %}
    <meta name="keywords" content="Contact GuidoTravo, assistance conformité bâtiment, support client GuidoTravo, questions référentiels construction." />
{% endblock %}
{% block canonical %}
    <link rel="canonical" href="{{ app.request.getSchemeAndHttpHost ~ app.request.baseUrl ~ app.request.pathInfo }}">
{% endblock %}

{% block body %}    
    <nav class="navbar">
        <div class="menu-burger" onclick="toggleNavbar()">☰</div>
        <div class="navbar-text">Contactez-nous</div>
        <div class="navbar-links" id="navbarLinks">
            <a href="{{ url('app_index') }}">Accueil</a>
            {# {{ include('_partials/header.html.twig') }} #}
            <a href="#">À propos</a>
            <a href="{{ url('app_offers') }}">Nos formules</a>
        </div>
    </nav>

    <div class="FORMULES">
            <div class="contact-form">

                {{ form_start(contactForm) }}
                    <div class="form-field">
                        <label for="name">Nom</label>
                        {{ form_widget(contactForm.lastName, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                <div class="form-field">
                    <label for="name">Prénom</label>
                    {{ form_widget(contactForm.name, { 'attr': {'class': 'form-control'} }) }}
                </div>
                    <div class="form-field">
                        <label for="email">Email</label>
                        {{ form_widget(contactForm.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                <div class="form-field">
                    <label for="email">Téléphone</label>
                    {{ form_widget(contactForm.phone, { 'attr': {'class': 'form-control'} }) }}
                </div>
                    <div class="form-field">
                        <label for="subject">Sujet</label>
                        {{ form_widget(contactForm.subject, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-field">
                        <label for="message">Message</label>
                        {{ form_widget(contactForm.message, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <button type="submit" class="primary-button">Envoyer</button>
                {{ form_end(contactForm) }}
        </div>
    </div>

    {{ include('_partials/footer.html.twig') }}
{% endblock %}
